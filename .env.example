# ============================================================================
# CONFIGURACIÓN DEL SISTEMA - NENIS Y BROS
# ============================================================================
# IMPORTANTE: Copia este archivo como .env y configura tus valores reales
# NO subas el archivo .env a repositorios públicos
# ============================================================================

# ENTORNO DE APLICACIÓN
APP_NAME="Nenis y Bros - Formación Empresarial"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost/nenis_y_bros

# CONFIGURACIÓN DE BASE DE DATOS
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=formacion_empresarial
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# SEGURIDAD
# Genera una clave única de 32 caracteres para tu aplicación
JWT_SECRET=tu_clave_secreta_jwt_muy_segura_aqui_32_caracteres
SESSION_LIFETIME=120
SESSION_SECURE=false
ENCRYPTION_KEY=tu_clave_de_encriptacion_segura_aqui

# CONFIGURACIÓN DE CORREO
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@nenisybros.com
MAIL_FROM_NAME="Nenis y Bros"

# CONFIGURACIÓN DE ARCHIVOS
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx
UPLOAD_PATH=uploads/

# LOGS
LOG_LEVEL=debug
LOG_PATH=backend/logs/

# CONFIGURACIÓN DE RATE LIMITING
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_MINUTES=1

# CONFIGURACIÓN DE SESIONES
SESSION_DRIVER=file
SESSION_PATH=backend/sessions/

# TIMEZONE
TIMEZONE=America/Mexico_City

# API
API_PREFIX=api
API_VERSION=v1
