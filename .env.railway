# Configuración de la aplicación
APP_NAME=Nenis y Bros
APP_ENV=production
APP_DEBUG=false
APP_URL=https://nenis-y-bros.vercel.app

# Base de datos (Railway)
DB_HOST=${{ Railway.DB_HOST }}
DB_PORT=3306
DB_DATABASE=${{ Railway.DB_DATABASE }}
DB_USERNAME=${{ Railway.DB_USERNAME }}
DB_PASSWORD=${{ Railway.DB_PASSWORD }}
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# Seguridad
JWT_SECRET=${{ Railway.JWT_SECRET }}
ENCRYPTION_KEY=${{ Railway.ENCRYPTION_KEY }}

# Rutas
UPLOAD_PATH=uploads/
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf

# Timezone
TIMEZONE=America/Mexico_City

# API
API_PREFIX=api
API_VERSION=v1

# Cache (deshabilitado por defecto en Railway)
CACHE_ENABLED=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_PREFIX=nyd